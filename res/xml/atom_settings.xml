<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/atom_settings_title" >
	
			
        <!-- Misc Settings -->
        <PreferenceScreen
            android:id="@+id/misc_settings"
            android:title="@string/miscsettings_title"
            android:fragment="com.atom.settings.MiscSettings"
            android:layout="@layout/preference_atom_miscsettings"
            />
	
   <com.atom.settings.preference.SystemSettingSwitchPreference 
   android:key="three_finger_gesture"
   android:title="@string/three_finger_gesture"
   android:summary="@string/three_finger_gesture_summary"
   android:defaultValue="false" />

   <com.atom.settings.preference.SystemSettingSwitchPreference
   android:key="volume_rocker_wake"
   android:summary="@string/volume_rocker_wake_summary"
   android:defaultValue="true" />

   <com.atom.settings.preference.SystemSettingSwitchPreference
   android:key="volume_button_music_control"
   android:summary="@string/volume_rocker_music_controls_summary"
   android:defaultValue="false"
   android:dependency="volume_rocker_wake" />

</PreferenceScreen>
